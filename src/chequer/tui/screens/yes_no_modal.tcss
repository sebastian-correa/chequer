YesNoModal {
    align: center middle;
}

#dialog {
    grid-size: 2;  # 2 x 2
    grid-gutter: 1 2;  # <vertical> <horizontal>
    grid-rows: 1fr 3;  # <first-row-height> <second-row-height>
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

#question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

Button {
    width: 100%;
}